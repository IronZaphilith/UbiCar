<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:context=".Activities.TripScreen"
		android:orientation="vertical"
		android:background="@drawable/road_bcg">

	<TextView
			android:background="@drawable/time"
			android:layout_width="wrap_content"
			android:layout_height="57dp"
			android:id="@+id/time" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
			app:layout_constraintHorizontal_bias="0.962" app:layout_constraintVertical_bias="0.7"/>
	<TextView
			android:background="@drawable/speed"
			android:layout_width="118dp"
			android:layout_height="118dp"
			android:id="@+id/velocity" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintHorizontal_bias="0.885" app:layout_constraintVertical_bias="0.248"/>
	<Button
			android:background="@drawable/finish_btn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/button" android:layout_marginTop="8dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintVertical_bias="0.817"/>
	<TextView
			android:background="@drawable/route"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/routeName" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
			app:layout_constraintVertical_bias="0.016" app:layout_constraintHorizontal_bias="0.571"/>
	<TextView
			android:background="@drawable/consumption"
			android:layout_width="118dp"
			android:layout_height="118dp"
			android:id="@+id/consumption" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintHorizontal_bias="0.114" app:layout_constraintVertical_bias="0.248"/>
	<TextView
			android:background="@drawable/distance"
			android:layout_width="wrap_content"
			android:layout_height="57dp"
			android:id="@+id/distance" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
			app:layout_constraintHorizontal_bias="0.037" app:layout_constraintVertical_bias="0.7"/>
	<TextView
			android:background="@drawable/pass_car"
			android:layout_width="354dp"
			android:layout_height="61dp"
			android:id="@+id/passCar" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
			app:layout_constraintVertical_bias="0.557"/>
	<TextView
			android:background="@drawable/bottom_bar"
			android:layout_width="match_parent"
			android:layout_height="95dp"
			android:id="@+id/bottomBar"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintVertical_bias="1.0"
			app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>